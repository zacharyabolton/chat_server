{erl_opts, [debug_info]}.

{deps, [
    {cowboy, "2.9.0"},
    {gun, "2.0.0"},
    {jsx, "3.0.0"}
]}.

{profiles, [
    {prod, [
        {relx, [
            {release, {chat_server, "0.1.0"}, [chat_server, sasl, runtime_tools]},
            {sys_config_src, "config/sys.config.src"},
            {vm_args_src, "config/vm.args.src"},
            {dev_mode, false}
        ]}
    ]},
    {dev, [
        {relx, [
            {release, {chat_server, "0.1.0"}, [chat_server, sasl, runtime_tools]},
            {sys_config, "config/sys_dev.config"},
            {vm_args_src, "config/vm_dev.args"},
            {dev_mode, true},
            {extended_start_script, true},
            {test_dirs, ["test"]}
        ]}
    ]},
    {test, [
        {sys_config, "config/sys_test.config"},
        {erl_opts, [debug_info, {d, 'TEST'}]}
    ]}
]}.
